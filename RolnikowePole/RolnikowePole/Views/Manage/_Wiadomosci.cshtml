@model List<RolnikowePole.Models.Wiadomosc>

@{ 
    Layout = null;
}

@foreach (var item in Model)
{
    <div class="media ">
        <div class="media-body">
            <h5 class="mt-0">
            @{ if(item.Sender.Id == ViewBag.ID)
                {
                    <text>@item.Receiver.Email</text>
                }
                else
                {
                    <text>@item.Sender.Email</text>
                }
            }
            | @item.DateAndTimeOfSend </h5>
            <strong>@item.Body</strong>
        </div>
    </div>
}