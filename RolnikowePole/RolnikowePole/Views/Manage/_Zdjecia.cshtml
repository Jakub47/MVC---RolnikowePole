@model RolnikowePole.ViewModels.WystawioneZwierzetaViewModel
@using RolnikowePole.Infrastucture

    @if (Model.Zdjecia.Count() > 1)
    {
        <div id="carouselExampleIndicators-@Model.WystawioneZwierzeta.ZwierzeId" class="carousel slide" data-ride="carousel" data-interval="false">
            <div class="carousel-inner" id="@Model.WystawioneZwierzeta.ZwierzeId" >
                @foreach (var zdjecie in Model.Zdjecia)
                {
                    if (zdjecie == Model.Zdjecia.First())
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" id="@Model.WystawioneZwierzeta.ZwierzeId" name="@zdjecie.ZdjecieID" src="@Url.ObrazkiSciezka(zdjecie.FilePath)" alt="First slide">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" id="@Model.WystawioneZwierzeta.ZwierzeId" name="@zdjecie.ZdjecieID" src="@Url.ObrazkiSciezka(zdjecie.FilePath)" alt="First slide">
                        </div>
                    }

                }
            </div>
            @if (Model.Zdjecia.Count() > 1)
            {
                <a class="carousel-control-prev" href="#carouselExampleIndicators-@Model.WystawioneZwierzeta.ZwierzeId" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators-@Model.WystawioneZwierzeta.ZwierzeId" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            }
        </div>
    }
    else
    {
        <span id="@Model.WystawioneZwierzeta.ZwierzeId">
            <img  class="card-img-top" id="@Model.WystawioneZwierzeta.ZwierzeId" name="@Model.WystawioneZwierzeta.ZwierzeId" src="@Url.Content("~/Content/Kursy/" + Model.WystawioneZwierzeta.NazwaPlikuObrazka)" alt="Card image cap" />
        </span>
    }