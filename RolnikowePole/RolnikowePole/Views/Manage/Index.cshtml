@model RolnikowePole.ViewModels.ManageCredentialsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center m-5">
        <hr />
        <h2 style="margin-bottom: 30px">Twoje dane</h2>

        @using (@Html.BeginForm("ChangeProfile", "Manage" ))
        {
            @Html.AntiForgeryToken()

        <div class="form-row">

            <div class="col-md-6 mb-3">
                @Html.LabelFor(o => o.DaneUzytkownika.Imie, "Imię:")
                @Html.TextBoxFor(o => o.DaneUzytkownika.Imie, new { @class = "form-control", placeholder = "First name" })
                <div class="valid-feedback">
                    @Html.ValidationMessageFor(o => o.DaneUzytkownika.Imie)
                </div>
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(o => o.DaneUzytkownika.Nazwisko, "Nazwisko")
                @Html.TextBoxFor(o => o.DaneUzytkownika.Nazwisko, new { @class = "form-control", placeholder = "Second name" })
                <div class="valid-feedback">
                    @Html.ValidationMessageFor(o => o.DaneUzytkownika.Nazwisko)
                </div>
            </div>

            <div class="col-md-5 mb-3">
                @Html.LabelFor(o => o.DaneUzytkownika.Adres, "Adres")
                @Html.TextBoxFor(o => o.DaneUzytkownika.Adres, new { @class = "form-control", placeholder = "Adress" })
                <input type="text" class="form-control" id="validationCustom02" placeholder="Last name" value="Otto" required>
                <div class="valid-feedback">
                    @Html.ValidationMessageFor(o => o.DaneUzytkownika.Adres)
                </div>
            </div>

            <div class="col-md-4 mb-3">
                @Html.LabelFor(o => o.DaneUzytkownika.Miasto, "Miasto")
                @Html.TextBoxFor(o => o.DaneUzytkownika.Miasto, new { @class = "form-control", placeholder = "City" })
                <input type="text" class="form-control" id="validationCustom02" placeholder="Last name" value="Otto" required>
                <div class="valid-feedback">
                    @Html.ValidationMessageFor(o => o.DaneUzytkownika.Miasto)
                </div>
            </div>

            <div class="col-md-3 mb-3">
                @Html.LabelFor(o => o.DaneUzytkownika.KodPocztowy, "Kod pocztowy")
                @Html.TextBoxFor(o => o.DaneUzytkownika.KodPocztowy, new { @class = "form-control", placeholder = "Adress" })
                <input type="text" class="form-control" id="validationCustom02" placeholder="Last name" value="Otto" required>
                <div class="valid-feedback">
                    @Html.ValidationMessageFor(o => o.DaneUzytkownika.Adres)
                </div>
            </div>


            <div style="text-align: center;">
                <table id="userdata-address-table">

                    <tr>
                        <td></td>
                        <td>@Html.TextBoxFor()</td>
                        <td>@Html.ValidationMessageFor(o => o.DaneUzytkownika.KodPocztowy)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(o => o.DaneUzytkownika.Telefon, "Numer telefonu")</td>
                        <td>@Html.TextBoxFor(o => o.DaneUzytkownika.Telefon)</td>
                        <td>@Html.ValidationMessageFor(o => o.DaneUzytkownika.Telefon)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(o => o.DaneUzytkownika.Email, "Adres e-mail")</td>
                        <td>@Html.TextBoxFor(o => o.DaneUzytkownika.Email)</td>
                        <td>@Html.ValidationMessageFor(o => o.DaneUzytkownika.Email)</td>
                    </tr>
                    <tr style="text-align: right;">
                        <td></td>
                        <td colspan="3">
                            <div class="checkbox" style="margin-bottom: 10px;">
                            </div>

                            <input type="submit" value="Potwierdź" class="submitLink" style="height: 40px; margin-right: 5px;" />
                        </td>
                    </tr>
                </table>
            </div>
            }

            <hr />
            <h2 style="margin-bottom: 30px">Zmiana hasła</h2>

            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="manage-error">
                    @Html.ValidationMessage("password-error", "")
                </div>

                if (Model.Message.HasValue)
                {
                    <div class="manage-message">
                        @switch (Model.Message)
                        {
                            case RolnikowePole.Controllers.ManageController.ManageMessageId.ChangePasswordSuccess:
                                @: Hasło zmienione pomyślnie!
                                break;
                            case RolnikowePole.Controllers.ManageController.ManageMessageId.Error:
                                @: Wystąpił błąd
                                break;
                        }
                    </div>
                }

                <table id="password-table" style="margin-left: 10px; margin-right: auto;">
                    <tr>
                        <td>@Html.LabelFor(o => o.ChangePasswordViewModel.OldPassword, "Stare hasło:")</td>
                        <td>
                            @Html.PasswordFor(o => o.ChangePasswordViewModel.OldPassword)
                            <div class="login-validation-message">
                                @Html.ValidationMessageFor(o => o.ChangePasswordViewModel.OldPassword)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(o => o.ChangePasswordViewModel.NewPassword, "Nowe hasło:")</td>
                        <td>
                            @Html.PasswordFor(o => o.ChangePasswordViewModel.NewPassword)
                            <div class="login-validation-message">
                                @Html.ValidationMessageFor(o => o.ChangePasswordViewModel.NewPassword)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(o => o.ChangePasswordViewModel.ConfirmPassword, "Potwierdź hasło:")</td>
                        <td>
                            @Html.PasswordFor(o => o.ChangePasswordViewModel.ConfirmPassword)
                            <div class="login-validation-message">
                                @Html.ValidationMessageFor(o => o.ChangePasswordViewModel.ConfirmPassword)
                            </div>
                        </td>
                    </tr>
                    <tr style="text-align: right;">
                        <td></td>
                        <td colspan="3">
                            <div class="checkbox" style="margin-bottom: 10px;">
                            </div>

                            <input type="submit" value="Zmień" class="submitLink" style="height: 40px;" />
                        </td>
                    </tr>
                </table>
            }
        </div>
        </div>

@section Scripts
{
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
