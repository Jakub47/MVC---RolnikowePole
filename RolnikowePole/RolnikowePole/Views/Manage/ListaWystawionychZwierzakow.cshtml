@model IEnumerable<RolnikowePole.Models.Zwierze>
@{
    ViewBag.Title = "ListaWystawionychZwierzakow";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<div class="container">
    <div class="row">
        @if (Model.Count() >= 0)
        {
            foreach (var pozycjaZamowienia in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    @using (Ajax.BeginForm("ListaWystawionychZwierzakow", pozycjaZamowienia, new AjaxOptions
                    {
                        Confirm = "Potwierdź zmodyfikowanie elementu",
                        OnSuccess = "alert('Pomyślnie wprowadzono zmiany')"
                    }))
                    {
                        @Html.HiddenFor(a => pozycjaZamowienia.Gatunek)
                        @Html.HiddenFor(a => pozycjaZamowienia.GatunekId)
                        @Html.HiddenFor(a => pozycjaZamowienia.NazwaPlikuObrazka)
                        @Html.HiddenFor(a => pozycjaZamowienia.UserId)
                        @Html.HiddenFor(a => pozycjaZamowienia.ZwierzeId)
                        <div class="card" style="width: 18rem;">
                            <a href="@Url.Action("Szczegoly", "Zwierzeta", new { id = pozycjaZamowienia.ZwierzeId })">
                                <img class="card-img-top" src="@Url.Content("~/Content/Kursy/" + pozycjaZamowienia.NazwaPlikuObrazka)" alt="Card image cap" />
                            </a>
                            <input type="button" value="Usun" class="btn btn-danger" />
                            <input type="file" name="@pozycjaZamowienia.ZwierzeId" value="Dodaj" id="txtUploadFile" class="makethispretty btn btn-success"  />
                            <div class="card-body">
                                <h5 class="card-title"> @Html.TextBoxFor(m => pozycjaZamowienia.Nazwa)</h5>
                                @*<p class="card-text">
                                        @pozycjaZamowienia.OpisZwierza
                                    </p>*@
                                @Html.TextAreaFor(m => pozycjaZamowienia.OpisZwierza)
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <strong>Opis skrócony: </strong> @Html.TextBoxFor(m => pozycjaZamowienia.OpisSkrocony)
                                </li>
                                <li class="list-group-item">
                                    <strong>Cena: </strong> @Html.TextBoxFor(m => pozycjaZamowienia.CenaZwierza)
                                </li>
                                <li class="list-group-item">
                                    <strong>Data Dodania: </strong> @Html.TextBoxFor(m => pozycjaZamowienia.DataDodania)
                                </li>
                                <li class="list-group-item">
                                    <strong>Data Narodzin: </strong>@Html.TextBoxFor(m => pozycjaZamowienia.DataNarodzin)
                                </li>
                                <li class="list-group-item">
                                    <strong>Gatunek: </strong>
                                    @Html.DropDownListFor(m => pozycjaZamowienia.Gatunek, new SelectList(ViewBag.Gatunki), pozycjaZamowienia.Gatunek)
                                </li>
                                <li class="list-group-item">
                                    <strong>Województwo:  </strong>
                                    @Html.DropDownListFor(m => pozycjaZamowienia.Wojewodztwo, new SelectList(ViewBag.Wojewodztwa), pozycjaZamowienia.Wojewodztwo, new { @class = "form-control" })
                                </li>
                                <li class="list-group-item">
                                    <strong>Miasto:  </strong> @Html.TextBoxFor(m => pozycjaZamowienia.Miasto)
                                </li>
                                <li class="list-group-item">
                                    <strong>Ukryty </strong>
                                    @if (pozycjaZamowienia.Ukryty)
                                    {
                                        @: TAK
                                    }
                                    else
                                    {
                                        @: NIE
                                    }
                                </li>

                                <li class="list-group-item">
                                    <strong>Wyróżniony: </strong>
                                    @if (pozycjaZamowienia.Wyrozniony)
                                    {
                                        @: TAK
                                    }
                                    else
                                    {
                                        @: NIE
                                    }
                                </li>

                                <li class="list-group-item text-center">
                                    <input type="submit" class="btn btn-warning btn-block" value="Zmień" />
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            }

        }
        else
        {
            <div style="text-align: center; margin-top: 50px; margin-bottom: 50px;">
                Brak Zwięrząt! Może chcesz dodać?
                <a class="btn btn-primary" href="@Url.Action("DodajZwierze","Manage")" role="button">
                    Dodaj Zwierze
                </a>
            </div>
        }

    </div>
</div>

@section scripts
{
    <script>
        $('#txtUploadFile').on('change', function (e) {
            var files = e.target.files;
            //var myID = 3; //uncomment this to make sure the ajax URL works
            if (files.length > 0) {
                if (window.FormData !== undefined) {
                    var data = new FormData();
                    for (var x = 0; x < files.length; x++) {
                        data.append("file" + x, files[x]);
                    }
                    data.append("id", $(this).attr('name'));
                    $.ajax({
                        type: "POST",
                        url: '/Manage/UploadFiles',
                        contentType: false,
                        processData: false,
                        data: data,
                        success: function (result) {
                            alert('dodano!');
                        },
                        error: function (xhr, status, p3, p4) {
                            var err = "Error " + " " + status + " " + p3 + " " + p4;
                            if (xhr.responseText && xhr.responseText[0] == "{")
                                err = JSON.parse(xhr.responseText).Message;
                            console.log(err);
                        }
                    });
                } else {
                    alert("This browser doesn't support HTML5 file uploads!");
                }
            }
        });
