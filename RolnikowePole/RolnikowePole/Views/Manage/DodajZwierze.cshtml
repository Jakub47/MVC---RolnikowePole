@model RolnikowePole.ViewModels.EditZwierzeViewModel
@{
    ViewBag.Title = "DodajZwierze";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}
<hr />
<h2 class="manageHeader">Edycja Zwierzaka</h2>
<div>

    @if(Model.Potwierdzenie.HasValue && Model.Potwierdzenie.Value)
    {
        <div style="text-align: center; margin: 50px;">
            Pomyślnie wprowadzono zmiany!
        </div>
    }

    @using (@Html.BeginForm("DodajZwierze", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="error-summary-centered">
            @Html.ValidationSummary()
        </div>

        @Html.HiddenFor(o => o.Zwierze.ZwierzeId)
        @Html.HiddenFor(o => o.Zwierze.DataDodania)
        @Html.HiddenFor(o => o.Zwierze.NazwaPlikuObrazka)

        <div style="text-align: center;">
            <table id="albumedit-address-table">
                <tr>
                    <td>@Html.LabelFor(o => o.Zwierze.Nazwa, "Nazwa:")</td>
                    <td>@Html.TextBoxFor(o => o.Zwierze.Nazwa)</td>
                    <td>@Html.ValidationMessageFor(o => o.Zwierze.Nazwa)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Zwierze.OpisZwierza, "Opis:")</td>
                    <td>@Html.TextBoxFor(o => o.Zwierze.OpisZwierza)</td>
                    <td>@Html.ValidationMessageFor(o => o.Zwierze.OpisZwierza)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Zwierze.OpisSkrocony, "Opis skrócony:")</td>
                    <td>@Html.TextBoxFor(o => o.Zwierze.OpisSkrocony)</td>
                    <td>@Html.ValidationMessageFor(o => o.Zwierze.OpisSkrocony)</td>
                </tr>
                <tr>  
                    <td>@Html.LabelFor(o => o.Gatunki, "Gatunek:")</td>
                    <td>@Html.DropDownListFor(m => m.Zwierze.GatunekId, new SelectList(Model.Gatunki, "GatunekId", "NazwaGatunku", Model.Gatunki.First().GatunekId))</td>
                    <td></td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Zwierze.CenaZwierza, "Cena:")</td>
                    <td>@Html.TextBoxFor(o => o.Zwierze.CenaZwierza)</td>
                    <td>@Html.ValidationMessageFor(o => o.Zwierze.CenaZwierza)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Zwierze.DataNarodzin, "Data Narodzin: ")</td>
                    <td>@Html.TextBoxFor(o => o.Zwierze.DataNarodzin, new { @class = "date-picker" })</td>
                    <td>@Html.ValidationMessageFor(o => o.Zwierze.DataNarodzin)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(o => o.Zwierze.Wyrozniony, "Wyróżniony:")</td>
                    <td>@Html.CheckBoxFor(o => o.Zwierze.Wyrozniony)</td>
                    <td></td>
                </tr>
                @if (ViewBag.EditMode == null || !ViewBag.EditMode)
                {
                    <tr>
                        <td colspan="3">
                            <div class="upload">
                                <input type="file" name="file" />
                            </div>
                        </td>
                    </tr>
                }
                <tr>
                    <td style="text-align: left">
                        @if (ViewBag.EditMode)
                        {
                            if (Model.Zwierze.Ukryty)
                            {
                                <a href="@Url.Action("PokazZwierza", "Manage", new { zwierzeId = Model.Zwierze.ZwierzeId })" style="display: block; margin-top: 15px; font-weight: bold;">
                                    Przywróć
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("UkryjZwierza", "Manage", new { zwierzeId = Model.Zwierze.ZwierzeId })" style="display: block; margin-top: 15px; font-weight: bold;">
                                    Usuń
                                </a>
                            }
                        }
                    </td>

                    <td style="text-align: right;">
                        <input type="submit" value="Zapisz" class="submitLink" style="height: 40px; margin-right: 0px; margin-top: 30px; font-weight: bold;" />
                    </td>
                    <td></td>
                </tr>
            </table>
        </div>
    }
</div>

<script type="text/javascript">
    $(function () {
        // This will make every element with the class "date-picker" into a DatePicker element
        $('.date-picker').datepicker();
    })
</script>