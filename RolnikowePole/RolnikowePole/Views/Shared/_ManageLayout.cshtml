<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" />
    @System.Web.Optimization.Styles.Render("~/Content/BootstrapAndCssForHomepage")

    <!-- Jezeli nie dziala usunac -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <style>
        body {
            padding-top: 80px;
        }

        @@media (max-width: 979px) {
            body {
                padding-top: 80px;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                <img src="~/Content/Images/rsz_lg.png" class="img-responsive img-rounded" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            Strona główna
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Manage")">
                            Twoje dane
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ListaWystawionychZwierzakow", "Manage")">
                            Twoje Zwierzeta
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("DodajZwierze", "Manage")">
                            Dodaj
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("WyswietlWiadomosciUzytkownika", "Manage")">
                            Wiadomości
                        </a>
                    </li>


                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Content("~/elmah")">
                                Logi
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Content("~/hangfire")">
                                Jobs
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Koszyk")">Obserwowane[@Html.Action("PobierzIloscElementowKoszyka", "Koszyk")]</a>
                    </li>
                    <li class="nav-item">
                        @using (Html.BeginForm("Logoff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "nav-link" }))
                        {
                            @Html.AntiForgeryToken()
                            <input class="btn btn-outline-danger btn-sm" type="submit" value="Wyloguj się" />
                        }
                        @*<a class="nav-link" href="@Url.(" Logoff", "Account" )" id="logoutForm">
                                Wyloguj
                            </a>*@

                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navigation -->

    @RenderBody()

    <!--Footer -->
    <footer class="py-2 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-success">Rolnikowe Pole Od 2018!</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Footer -->

    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryAndBootstrapBundle")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/MicrosoftAjax.js"></script>
    <script src="~/Scripts/MicrosoftMvcAjax.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>