@model RolnikowePole.Models.Zwierze
@using RolnikowePole.Infrastucture

@{
    ViewBag.Title = "Szczegoly";
}

<div id="ListaKategoriZawartosc">
    @Html.Action("GatunkiMenu")
    <div id="KategorieListPrawaSekcja">
        <div id="Breadcrumb">
            <img src="../Content/Images/dommaly.png" />
            <a href="link">
                @Html.MvcSiteMap().SiteMapPath()
            </a>
        </div>
        <section id="SekcjaKurs">
            <div id="KursLewa">
                <img src="@Url.ObrazkiSciezka(Model.NazwaPlikuObrazka)" />
            </div>
            <div id="KursPrawa">
                <div id="KursNazwa">
                    <h1>
                        @Model.Nazwa
                    </h1>
                </div>
                <div id="KursCena">
                    <div>
                        @string.Format("{0:0.##}", Model.CenaZwierza)<span>PLN</span>
                    </div>
                    <a href="@Url.Action("DodajDoKoszyka","Koszyk", new { id = Model.ZwierzeId })"></a>
                </div>
                <div id="KursOpis">
                    @Model.OpisZwierza
                </div>
                <div id="KursInfo">
                    @Model.OpisSkrocony
                </div>
                @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("DodajZwierze", "Manage", new { zwierzeId = Model.ZwierzeId })" style="margin-top: 20px; font-weight: bold; display: block;">Edytuj</a>
                }
            </div>
        </section>
    </div>
</div>
