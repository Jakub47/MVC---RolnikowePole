@model RolnikowePole.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

@section SectionTitle
{
    Zaloguj się
}

<div class="col-sm-offset-2 col-sm-8 mt-5">
    @using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        //Verify whether login is coming from our site
        @Html.AntiForgeryToken()

        <div id="login-error">
            @Html.ValidationMessage("loginError", "")
        </div>

        <table id="login-table" style="margin-left: auto; margin-left: auto; text-align: center; ">
            <tr>
                <td>@Html.LabelFor(o => o.Email, "E-mail:")</td>
                <td>
                    @Html.TextBoxFor(o => o.Email)
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Email)
                    </div>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.Password, "Hasło")</td>
                <td>
                    @Html.PasswordFor(o => o.Password)
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(i => i.Password)
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <div class="checkbox" style="margin-bottom: 10px;">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked" })
                        @Html.LabelFor(m => m.RememberMe)
                        <input type="submit" value="Zaloguj" class="submitLink" style="height: 40px; margin: 10px; margin-left: 50px;" />
                    </div>
                </td>
            </tr>
        </table>
    }

    <div style="text-align: right;">
        <a href="@Url.Action("Register")">Nie mam jeszcze konta</a>
    </div>
</div>
@section Scripts
{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}